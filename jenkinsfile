pipeline {
    agent any
    environment {
        dockerHome = tool 'docker'
        PATH = "${dockerHome}/bin:${env.PATH}"
         DOCKER_COMPOSE_PATH = '/usr/local/bin/docker-compose' // Reemplaza esto con la ruta de tu binario de Docker Compose
    }

    stages {
        stage('Verify tooling') {
            steps {
                script {
                    echo 'docker ps'
                    sh 'docker version'
                    sh '${DOCKER_COMPOSE_PATH} up --build'
                }
            }
        }
    }
}
