pipeline {
    agent any
    environment {
        dockerHome = tool 'docker'
        PATH = "${dockerHome}/bin:${env.PATH}"
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('Verify tooling') {
            when {
                branch 'main'
            }
            steps {
                script {
                    sh 'docker-compose -f ${DOCKER_COMPOSE_FILE} up -d --build'
                }
            }
        }
    }
}
