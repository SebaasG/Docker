pipeline {
    agent any
    stages {
    stage('Initialize'){
        def dockerHome = tool 'docker'
        env.PATH = "${dockerHome}/bin:${env.PATH}"
    }
        stage('Verify tooling') {
            steps {
                sh 'docker info'
                  sh ' docker version'
                    sh 'docker compose version'
                
            }
        }
    }
}
